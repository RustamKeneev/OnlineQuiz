<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/clarity_of_contours_stone_text_title"
        android:text="@string/clarity_of_contours_stone_text_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/fuzzy_blurry_checkbox"
        app:layout_constraintTop_toBottomOf="@id/clarity_of_contours_stone_text_title"
        app:layout_constraintLeft_toLeftOf="@id/clarity_of_contours_stone_text_title"
        android:text="@string/fuzzy_blurry_checkbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/clear_even_checkbox"
        app:layout_constraintTop_toBottomOf="@id/fuzzy_blurry_checkbox"
        app:layout_constraintLeft_toLeftOf="@id/fuzzy_blurry_checkbox"
        android:text="@string/clear_even_checkbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>